<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/icon_map_pin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:foreground="@drawable/map_pin"
        android:foregroundTint="#50C785"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_result_name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text=""
        android:textSize="24dp"
        app:layout_constraintLeft_toRightOf="@id/icon_map_pin"
        app:layout_constraintRight_toLeftOf="@id/text_result_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_result_address"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#aa000000"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@id/icon_map_pin"
        app:layout_constraintRight_toLeftOf="@id/text_result_type"
        app:layout_constraintTop_toBottomOf="@id/text_result_name" />

    <TextView
        android:id="@+id/text_result_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:gravity="end"
        android:text=""
        android:textColor="#aa000000"
        android:textSize="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>